<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <mesh filename="package://kapibara/meshes/Bottom.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0.02" />
            <geometry>
                <box size="0.150 0.083 0.033" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.65" x="0.15" y="0.083" z="0.033" >
            <origin xyz="0 0 0.02" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Base -->

    <joint name="base_joint" type="fixed">
        <parent link="chassis" />
        <child link="base" />
        <origin xyz="0.027 0 0.05" />
    </joint>

    <link name="base">
        <visual>
            <origin xyz="0 0 0.05" />
            <geometry>
                <mesh filename="package://kapibara/meshes/Top.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="-0.02 0 0.07" />
            <geometry>
                <box size="0.279 0.134 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.15" x="0.279" y="0.134" z="0.15" >
            <origin xyz="-0.02 0 0.07" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>
    
    <gazebo reference="base">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="wheel_left1_joint" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel1" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="0.065 0.066 0.0165"/>
    </joint>


    <link name="left_wheel1">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>


    <joint name="wheel_left2_joint" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel2" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="0.005 0.066 0.0165"/>
    </joint>


    <link name="left_wheel2">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>


    <joint name="wheel_left3_joint" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel3" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="-0.055 0.066 0.0165"/>
    </joint>


    <link name="left_wheel3">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="wheel_right1_joint" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel1" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="0.065 -0.066 0.0165"/>
    </joint>


    <link name="right_wheel1">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>


    <joint name="wheel_right2_joint" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel2" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="0.005 -0.066 0.0165"/>
    </joint>


    <link name="right_wheel2">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>


    <joint name="wheel_right3_joint" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel3" />
        <axis xyz="0 0 1"/>
        <origin rpy="${-pi/2} 0 0" xyz="-0.055 -0.066 0.0165"/>
    </joint>


    <link name="right_wheel3">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.024" length="0.044" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.024" length="0.044">
            <origin xyz="0 0 0" rpy="0 0 1" />
        </xacro:inertial_cylinder>
    </link>

    <!-- EARS -->


    <joint name="left_ear_joint" type="revolute">
        <parent link="base" />
        <child link="left_ear" />
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="-0.09 0.075 0.09" />
        <limit effort="1" velocity="1" upper="${-pi/2}" lower="${pi/4}" />
    </joint>

    <link name="left_ear">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <mesh filename="package://kapibara/meshes/Wing1.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white" />
        </visual>
        
    </link>


     <joint name="right_ear_joint" type="revolute">
        <parent link="base" />
        <child link="righ_ear" />
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="-0.09 -0.070 0.09" />
        <limit effort="1" velocity="1" upper="${-pi/2}" lower="${pi/4}" />
    </joint>

    <link name="righ_ear">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <mesh filename="package://kapibara/meshes/Wing2.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white" />
        </visual>
        
    </link>



</robot>